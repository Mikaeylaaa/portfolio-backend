{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "express"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}